<body>
    <h1>Agrega tu pelicula favorita</h1>

    <form action="/movies/edit/<%= movie.id %>?_method=PUT" method="POST">

        <label for="title">Titulo de pelicula</label>
        <input type="text" id="title" name="title" value="<%= movie.title %>"></br></br>

        <label for="rating">Rating</label>
        <input type="number" id="rating" name="rating" value="<%= movie.rating %>"></br></br>

        <label for="awards">Cantidad de premios</label>
        <input type="number" id="awards" name="awards" value="<%= movie.awards %>"></br></br>

        <label for="length">Duraci√≥n en minutos</label>
        <input type="number" id="length" name="length" value="<%= movie.length %>"></br></br>

        <label for="release_date">Fecha de estreno</label>
        <input type="date" id="release_date" name="release_date" value="<%= movie.release_date %>"></br></br>

        <input type="submit" value="Editar pe pelicula">
    </form>
</body>
</html>